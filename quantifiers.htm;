    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const answers = {
                q1: ['no'],
                q2: ['all'],
                q3: ['every'],
                q4: ['majority'],
                q5: ['minority'],
                q6: ['several'],
                q7: ['less', 'fewer'],
                q8: ['most'],
                q9: ['either', 'or'],
                q10: ['any'],
                q11: ['each'],
                q12: ['neither', 'nor'],
                q13: ['a few'],
                q14: ['few'],
                q15: ['many'],
                q16: ['both', 'and'],
                q17: ['none'],
                q18: ['fewer'],
                q19: ['some'],
                q20: ['less']
            };

            const checkButton = document.getElementById('check-btn');
            const resetButton = document.getElementById('reset-btn');
            const scoreContainer = document.getElementById('score-container');

            checkButton.addEventListener('click', () => {
                let correctCount = 0;
                const totalQuestions = 20;

                for (let i = 1; i <= totalQuestions; i++) {
                    const feedbackSpan = document.getElementById(`f${i}`);
                    const correctAnswers = answers[`q${i}`];
                    let isCorrect = false;

                    if (correctAnswers.length === 1) {
                        const input = document.getElementById(`q${i}`);
                        if (input) {
                            const userAnswer = input.value.trim().toLowerCase();
                            if (correctAnswers.includes(userAnswer)) {
                                isCorrect = true;
                            }
                            input.className = isCorrect ? 'correct' : 'incorrect';
                        }
                    } else if (correctAnswers.length === 2) {
                        const inputA = document.getElementById(`q${i}a`);
                        const inputB = document.getElementById(`q${i}b`);
                        if (inputA && inputB) {
                            const userAnswerA = inputA.value.trim().toLowerCase();
                            const userAnswerB = inputB.value.trim().toLowerCase();
                            if (userAnswerA === correctAnswers[0] && userAnswerB === correctAnswers[1]) {
                                isCorrect = true;
                            }
                            inputA.className = isCorrect ? 'correct' : 'incorrect';
                            inputB.className = isCorrect ? 'correct' : 'incorrect';
                        }
                    }

                    if (isCorrect) {
                        correctCount++;
                        feedbackSpan.textContent = '✔';
                        feedbackSpan.className = 'feedback correct';
                    } else {
                        feedbackSpan.textContent = '✖';
                        feedbackSpan.className = 'feedback incorrect';
                    }
                    feedbackSpan.style.transform = 'scale(1.5)';
                    setTimeout(() => { feedbackSpan.style.transform = 'scale(1)'; }, 300);
                }
                
                scoreContainer.textContent = `Your Score: ${correctCount} / ${totalQuestions}`;
                scoreContainer.style.color = (correctCount === totalQuestions) ? 'var(--correct-color)' : 'var(--primary-color)';
            });

            resetButton.addEventListener('click', () => {
                const inputs = document.querySelectorAll('input[type="text"]');
                const feedbacks = document.querySelectorAll('.feedback');
                
                inputs.forEach(input => {
                    input.value = '';
                    input.className = '';
                });

                feedbacks.forEach(feedback => {
                    feedback.textContent = '';
                    feedback.className = 'feedback';
                });
                
                scoreContainer.textContent = '';
                scoreContainer.style.color = 'var(--text-color)';
            });
        });
    </script>

</body>
